body {
    margin: 0;
    font-family: Arial, sans-serif;
}

header {
    background-color: purple;
    padding: 10px;
    display: flex;
    gap: 10px;
}

.menu-icon {
    width: 50px;
    height: 20px;
    background-color: blue;
}

main {
    display: flex;
}

.main-content {
    flex: 3;
    background-color: yellow;
    padding: 200px;
}

.sidebar {
    flex: 1;
    background-color: green;
    padding: 20px;
}

